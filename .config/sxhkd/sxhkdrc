KP_Insert ; KP_Right
	sleep 0.15; xdotool type $'→';
KP_Insert ; KP_Left
	sleep 0.15; xdotool type $'←';
KP_Insert ; KP_Up
	sleep 0.15; xdotool type $'↑';
KP_Insert ; KP_Down
	sleep 0.15; xdotool type $'↓';
KP_Insert ; KP_Subtract
	sleep 0.15; xdotool type $'¬';
KP_Insert ; KP_Prior
	sleep 0.15; xdotool type $'∨';
KP_Insert ; KP_Home
	sleep 0.15; xdotool type $'∧';
KP_Insert ; KP_Begin
	sleep 0.15; xdotool type $'⇒';
KP_Insert ; KP_End
	sleep 0.15; xdotool type $'∃';
KP_Insert ; KP_Next
	sleep 0.15; xdotool type $'∀';
KP_Insert ; KP_Multiply
	sleep 0.15; xdotool type $'⊻';
KP_Insert ; KP_Add
	sleep 0.15; xdotool type $'≡';
KP_Insert ; KP_Enter
	sleep 0.15; xdotool type $'—';
KP_Insert ; KP_Delete
	sleep 0.15; xdotool type $'\u0301';

### wm independent hotkeys

# monitor managing
XF86MonBrightnessUp
	xbacklight -inc 25
XF86MonBrightnessDown
	xbacklight -dec 25
# keymaps
alt + {1,2,3}
	setxkbmap {us,ru,ua}
# scripts
ctrl + @Print
	scrot '%Y-%m-%d_$wx$h.png' -s -e 'xclip -selection clipboard -t "image/png" < $f && rm $f'
# programms
super + {Return,w,d,e}
	{alacritty,brave,~/scripts/bsp_rox,rox}
super + c
	bspc rule -a ROX-Filer -o state=floating && rox ~/Downloads
super + x
	dmenu_run -fn 'DejaVu Sans Mono Book-14' -sb 'Orange Red'
super + a
	alacritty --working-directory /home/wrabbit/chest & sleep 0.8; bspc rule -a ROX-Filer -o focus=off split_dir=south split_ratio=0.85 & rox /home/wrabbit/chest
# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
